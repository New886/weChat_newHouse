.slide-image image{
  width: 100%;
}
.bgColor{
  background-color: white;
}
.clear{
  box-sizing: border-box;
}
.titleWrap{
  padding: 1.25rem .5rem 0rem 1rem;
  border-bottom: 1px solid #e5e5e5;
}
.detailTitle, .price, .house{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: .5rem;
}
.title{
  font-size: 1rem;
  flex: 1.2;
  font-weight: 600;
}
.state{
  font-size: .875rem;
  color: #666;
  flex: 2;
  padding-left: 20rpx;
  font-weight: 500;
}
.average{
  flex: 1.3;
  font-size: 1rem;
  color: #db4c3f;
}
.tag{
  margin-bottom: .5rem;
}
.time{
  flex: 1.3;
  font-size: .625rem;
  color: #939fa1;
}
.tag text{
  font-size: .65rem;
  color: #999;
  border: 1px solid #e5e5e5;
  border-radius: 40rpx;
  padding: .2rem .5rem;
  margin-right: 20rpx;
  
}
.location{
  margin-top: .9375rem;
  border-top: 1px solid #e5e5e5;
  padding: 20rpx 0rpx;
}
.addr, .license{
  font-size: .8rem;
  color: #666;
  position: relative;
}
.license{
  margin-top: 40rpx;
}
.arrow::after{
  content: '';
  width: .5rem;
  height: .5rem;
  border-right: 1px solid #9c9fa1;
  border-top:  1px solid #9c9fa1;
  position: absolute;
  right: 1.2rem;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
}
.introTitle{
  position: relative;
}
.leftArrow{
  width: 28rpx;
  height: 28rpx;
  border-right: 1px solid #9c9fa1;
  border-top:  1px solid #9c9fa1;
  position: absolute;
  right: 46rpx;
  top: 25rpx;
  transform: translateY(-50%) rotate(45deg);
}
.bottomArrow{
   width: 28rpx;
    height: 28rpx;
    border-right: 1px solid #9c9fa1;
    border-bottom:  1px solid #9c9fa1;
    position: absolute;
    right: 46rpx;
    top: 25rpx;
    transform: translateY(-50%) rotate(45deg);
}
.amount{
  font-size: .9rem;
  color: #999;
  font-weight: 500;
}
.houseTypeInfo{
  display: flex;
  flex-direction: row;
  padding: 40rpx 0rpx 15rpx 0rpx;
  box-sizing: border-box;
  align-items: center;
}
.houseTypeImg{
  flex: 1;
  text-align: center;
}
.houseTypeImg image{
  width: 100%;
}
.houseTypeText{
  flex: 2;
  margin-left: 30rpx;
  line-height: 1.3rem;
}
.text1{
  font-size: .9rem;
  color: #222
}
.onSale{
  color: #00ae66;
}
.typeFontSize{
  font-size: .7rem;
}
.colorGray{
  color: #8b8b8b;
}
.tag{
  padding: .1rem .3rem;
  box-sizing: border-box;
  color: #849aae;
  margin-left: .3rem;
  display: inline;
  word-wrap: break-word;
  width: 660rpx;
}
.colorRed{
  color: #db4c3f;
}
.houseInfo{
  padding: 0.5rem;
  margin-top: 0.75rem;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
